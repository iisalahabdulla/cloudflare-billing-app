{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "types": ["@cloudflare/workers-types", "jest"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    // "typeRoots": ["./node_modules/@types", "./src/types", "./node_modules/@cloudflare"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}